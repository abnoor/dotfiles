-- vim:filetype=haskell

Config{
--font ="xft:Mono-11",
--font = "-misc-fixed-*-*-*-*-10-*-*-*-*-*-*-*",
font = "envypn-13",
--font = "-*-neep-medium-r-semicondensed-*-14-*-*-*-*-*-*-*",
bgColor = "#002B36",
fgColor = "#EEE8D5",
position = Top,
lowerOnStart = True,
commands = [
               Run Weather "EGGP"
               ["-t",
               "<tempC>C "
               ,"-L","18","-H","25",
               "--normal","green",
               "--high","red",
               "--low","lightblue"
               ] 36000,

              Run Network "eth0"
               ["-L","0","-H","200",
               "--high","green",
               "--low", "red"
               ] 10,

              Run Wireless "wlan0"
              ["-L","0","-H","32",
               "--normal","green","--high","red"
              ] 10,

             Run Cpu
             [ "-t", "<total>%",
             "-L","3","-H","50",
             "--normal","green",
             "--high","red"
             ] 10,

             Run Memory ["-t","<usedratio>%"] 10,

             Run Date "%H:%M  %_d %b %Y " "date" 10,

             Run StdinReader,

             Run BatteryP ["BAT0"]
             ["-t", "<acstatus>: <left>% / <timeleft>",
             "--", "-O", "on",
             "-o", "off"
             ] 10

             -- Run BatteryP ["BAT0"]
           -- ["-t", "<acstatus>: <left>% / <timeleft>",
          -- "-L", "10", "-H", "80", "-p", "3",
          -- "--", "-O", "<fc=green>On</fc> - ", "-i", "",
          -- "-L", "-15", "-H", "-5",
          -- "-l", "red", "-m", "blue", "-h", "green",
          -- "-f", "energy_full"]
          --10


            ],

sepChar = "%",
alignSep = "}{",
template = "%StdinReader%}{%battery% <fc=#8AB5E4></fc> <icon=/home/abdi/xbm/cpu.xbm/> %cpu% <fc=#8AB5E4></fc> <icon=/home/abdi/xbm/mem.xbm/> %memory% <fc=#8AB5E4></fc> %eth0%  %wlan0wi% <fc=#8AB5E4></fc> <icon=/home/abdi/temp.xpm/>%EGGP% <fc=#8AB5E4></fc>  <fc=#ee9a00>%date%</fc>"
}



